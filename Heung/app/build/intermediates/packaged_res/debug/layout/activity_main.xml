<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="MainActivity">

    <Button
        android:id="@+id/btn_postlist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="게시글 목록"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.947"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/popular_posts_recyclerview"
        android:layout_width="412dp"
        android:layout_height="197dp"
        app:layout_constraintBottom_toTopOf="@id/latest_posts_recyclerview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_postlist"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/tv_popular_posts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="인기 게시물"
        app:layout_constraintTop_toTopOf="@id/popular_posts_recyclerview"
        app:layout_constraintStart_toStartOf="@id/popular_posts_recyclerview"
        app:layout_constraintEnd_toEndOf="@id/popular_posts_recyclerview" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/latest_posts_recyclerview"
        android:layout_width="413dp"
        android:layout_height="242dp"
        app:layout_constraintBottom_toTopOf="@id/tv_recent_posts"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/popular_posts_recyclerview"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/tv_recent_posts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="최근 게시물"
        app:layout_constraintTop_toTopOf="@id/latest_posts_recyclerview"
        app:layout_constraintStart_toStartOf="@id/latest_posts_recyclerview"
        app:layout_constraintEnd_toEndOf="@id/latest_posts_recyclerview" />

    <TextView
        android:id="@+id/post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/latest_posts_recyclerview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <include
        layout="@layout/bottom_navigation_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent" />

    <Button
        android:id="@+id/logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="152dp"
        android:text="로그아웃"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.472"
        app:layout_constraintStart_toStartOf="parent" />
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
