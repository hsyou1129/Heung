<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout_already"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/recruit_content_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nickname"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/recruit_content_title"
        app:layout_constraintTop_toBottomOf="@+id/recruit_content_title_line" />

    <TextView
        android:id="@+id/recruit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/recruit"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/recruit_content_button_back"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/recruit_content_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/date"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/recruit_content_author"
        app:layout_constraintTop_toBottomOf="@+id/recruit_content_title_line" />

    <View
        android:id="@+id/recruit_content_title_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#808080"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recruit_content_button_back" />

    <TextView
        android:id="@+id/recruit_content_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/recruit_content_title_line" />

    <View
        android:id="@+id/recruit_content_content_line"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#808080"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recruit_reply_delete" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        app:layout_constraintTop_toBottomOf="@+id/recruit_content_content_line">

        <TextView
            android:id="@+id/recruit_content_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/content"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/recruit_content_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Recruit"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/recruit_content_endDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/endTime"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/recruit_content_max"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/maximum"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/recruit_content_curr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/curr"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/recruit_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/type"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/recruit_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/contact"
            android:textSize="12sp" />
    </LinearLayout>

    <NumberPicker
        android:id="@+id/recruit_curr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <Button
        android:id="@+id/complete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/complete"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recruit_curr" />

    <ImageButton
        android:id="@+id/recruit_content_button_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:src="@drawable/arrow_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/recruit_reply_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/delete"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recruit_content_title_line" />

    <LinearLayout
        android:id="@+id/edit_comment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
